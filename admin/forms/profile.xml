<?xml version="1.0" encoding="utf-8"?>
<form addfieldprefix="Joomla\Component\Test\Administrator\Field">
	<fieldset name="details">
		<field
			name="id" type="hidden" />
		<field
			name="user_id"
			type="user"
			label="COM_TEST_USER_LABEL"
			default=""
			required="true"
		/>
		<field
			name="fields"
			type="userfields"
			label="COM_TEST_FIELDS_LABEL"
			default=""
			multiple="multiple"
			required="true"
		/>
 		<field
			name="state"
			type="list"
			label="JSTATUS"
			class="custom-select-color-state"
			size="1"
			default="1"
			>
			<option value="1">JPUBLISHED</option>
			<option value="0">JUNPUBLISHED</option>
			<option value="2">JARCHIVED</option>
			<option value="-2">JTRASHED</option>
		</field>

	</fieldset>
</form>
